{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["chrome", "DOM"],
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}